<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:minSdkVersion="8"
    package="com.example.circles">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="Circles"
        android:roundIcon="@mipmap/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:minSdkVersion="8">

        <activity
            android:name="com.example.circles.ResetPassword"
            android:parentActivityName="com.example.circles.Login"></activity>
        <activity android:name="Profiles.MyProfile" />
        <activity android:name="Profiles.Profile" />
        <activity android:name="Messaging.MessagingActivity" />
        <activity android:name="com.example.circles.MainActivity" />
        <activity android:name="com.example.circles.Register" />

        <activity android:name="com.example.circles.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>



</manifest>